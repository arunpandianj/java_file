pipeline {
	agent {
        	docker {
            		image 'openjdk:11'
            		label 'agent1'  // This ensures the task runs on your Docker agent named "agent1"
        	}
    	}
stages {
        stage('Install') {
            steps {
                script {
                	sh 'apt-get update'
			sh 'apt-get install -y git'
                    }
                }
            }
	stage('Create') {
            steps {
                script {
                	sh 'java --version'
                    }
                }
            }
        stage('Compile') {
            steps {
                script {
                	sh 'javac Hello.java'
                    }
                }
            }
        stage('Run') {
            steps {
                script {
                	bat 'java Hello'
                    }
                }
            }
	}
}
